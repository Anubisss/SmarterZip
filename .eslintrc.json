{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@tanstack/eslint-plugin-query/recommended",
    "plugin:jest/recommended",
    "prettier"
  ],
  "plugins": ["react", "@typescript-eslint", "@tanstack/query", "jest"],
  "parser": "@typescript-eslint/parser",
  "env": {
    "jest/globals": true
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "no-console": "warn",
    "max-depth": ["error", 3]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
